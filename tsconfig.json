{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"allowJs": true,
		"moduleResolution": "node",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		},
		"typeRoots": ["./node_modules/@types"],
		"lib": ["es2016", "dom"],
		"declaration": true,
		"sourceMap": true,
		"incremental": true
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.tsx",
		"src/**/*.json",
		"src/cli/**/*.ts",
		"src/startup.ts"
	],
	"exclude": ["node_modules", "dist", "**/*.test.ts"]
}
